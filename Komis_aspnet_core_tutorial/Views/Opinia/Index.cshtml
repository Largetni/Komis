@model Opinia

<form asp-action="Index" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <label asp-for="NazwaUzytkownika" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input asp-for="NazwaUzytkownika" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Wiadomosc" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <textarea asp-for="Wiadomosc" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="OczekujOdpowiedzi" class="col-md-2 custom-control-label"></label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="OczekujOdpowiedzi" class="form-control"/>
        </div>
    </div>

    <div class="form-control">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Wyślij opinię" />
        </div>
    </div>

</form>
